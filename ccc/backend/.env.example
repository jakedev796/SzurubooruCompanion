# --- Szurubooru ---
SZURU_URL=http://your-szurubooru-host:8080
SZURU_USERNAME=your_username
SZURU_TOKEN=your_api_token
# Category for tags when we can't resolve (general, artist, copyright, character, meta)
SZURU_DEFAULT_TAG_CATEGORY=general

# --- Database (Postgres) ---
DATABASE_URL=postgresql+asyncpg://ccc:ccc@postgres:5432/ccc

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- WD14 Tagger (in-process via wdtagger; no separate container) ---
WD14_ENABLED=true
WD14_MODEL=SmilingWolf/wd-swinv2-tagger-v3
WD14_CONFIDENCE_THRESHOLD=0.35
WD14_MAX_TAGS=30

# --- CCC API auth (leave empty to disable auth) ---
API_KEY=

# --- Worker ---
JOB_DATA_DIR=/data/jobs
GALLERY_DL_TIMEOUT=120
YTDLP_TIMEOUT=300
MAX_RETRIES=3
RETRY_DELAY=5.0

# --- Gallery-DL ---
# Optional: path to gallery-dl config file (-c). If unset, we pass extractor.yandere.tags=true for yande.re URLs.
# GALLERY_DL_CONFIG_FILE=
# Sankaku (sankaku.app / sankakucomplex.com) login; used when the job URL is a Sankaku URL.
# GALLERY_DL_SANKAKU_USERNAME=
# GALLERY_DL_SANKAKU_PASSWORD=

# --- Server ---
HOST=0.0.0.0
PORT=21425
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=*
