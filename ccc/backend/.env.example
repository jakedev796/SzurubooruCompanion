# --- Szurubooru ---
SZURU_URL=http://your-szurubooru-host:8080
SZURU_USERNAME=your_username
SZURU_TOKEN=your_api_token
# Category for tags when we can't resolve (general, artist, copyright, character, meta)
SZURU_DEFAULT_TAG_CATEGORY=general

# --- Database (Postgres) ---
DATABASE_URL=postgresql+asyncpg://ccc:ccc@postgres:5432/ccc

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- WD14 Tagger (in-process via wdtagger; no separate container) ---
WD14_ENABLED=true
WD14_MODEL=SmilingWolf/wd-swinv2-tagger-v3
WD14_CONFIDENCE_THRESHOLD=0.35
WD14_MAX_TAGS=30

# --- CCC API auth (leave empty to disable auth) ---
API_KEY=

# --- Worker ---
JOB_DATA_DIR=/data/jobs
GALLERY_DL_TIMEOUT=120
YTDLP_TIMEOUT=300
MAX_RETRIES=3
RETRY_DELAY=5.0

# --- Gallery-DL ---
# Path to gallery-dl config file
GALLERY_DL_CONFIG_FILE=/config.json

# Twitter (requires cookies for reliable access; username/password often insufficient)
# Netscape-format cookie content (paste the full export). No file needed.
# TWITTER_COOKIES="domain	flag	path	secure	expiry	name	value
# .twitter.com	TRUE	/	TRUE	1234567890	auth_token	..."
TWITTER_USERNAME=
TWITTER_PASSWORD=

# Misskey
MISSKEY_USERNAME=
MISSKEY_PASSWORD=

# Sankaku (sankaku.app / sankakucomplex.com)
SANKAKU_USERNAME=
SANKAKU_PASSWORD=

# Danbooru
DANBOORU_API_KEY=
DANBOORU_USER_ID=

# Gelbooru
GELBOORU_API_KEY=
GELBOORU_USER_ID=

# Reddit
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=

# --- Dashboard auth (optional). If both set, API accepts X-API-Key OR Basic auth. ---
DASHBOARD_USER=
DASHBOARD_PASSWORD=

# --- Server ---
HOST=0.0.0.0
PORT=21425
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=*
